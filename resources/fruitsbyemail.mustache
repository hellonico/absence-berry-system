<!DOCTYPE html>
<html lang="en">
{{> header}}
<body>

  <div class="container">
    <div class="row u-full-width">
      {{> submenu }}
        <h2>Holidays for {{email}}</h2>
        {{#month}}
            <p style="font-style: italic;">Reminder: Showing all holidays (even past ones)</p>
        {{/month}}
        {{^month}}
            <p style="font-style: italic;">Reminder: Not showing past holidays for single user</p>
        {{/month}}
    </div>
      <div class="row u-full-width">
          <div class="twelve column" style="margin-top: 3%">

          {{> smallfruits}}
        </div>
    </div>

  </div>

  <script type="application/javascript">
  document.onkeyup = function(e) {
    switch(e.which) {
        case 27: // esc
        window.location.href = document.referrer;
        break;

        case 37: // left
        // window.location.href =  window.location.origin + "/abs/{{today}}";
        break;

        case 38: // up
        window.location.href =  window.location.origin;
        break;

        case 39: // right
        // window.location.href =  window.location.origin + "/abs/{{dayafter}}";
        break;

        case 40: // down
        window.location.href =  window.location.origin + "/abs/{{today}}";
        break;

        default: return; // exit this handler for other keys
    }

  }
  </script>
</body>
</html>
