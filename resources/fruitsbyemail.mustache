<!DOCTYPE html>
<html lang="en">
<head>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <title>Absence Berry System</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/skeleton.css">
  <link rel="stylesheet" href="/css/custom.css">

  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="/images/favicon.png">

</head>
<body>

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <div class="container">
    <div class="row u-full-width">
      <div class="twelve column" style="margin-top: 3%">
      <h2>Holidays for {{email}}</h2>
        <a href="/"><img style="float:right" src="/images/berry.jpg" width="64" height="64"/></a>
        
        <table class="mytable u-full-width">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Email</th>
            <th>Dates</th>
            <th>Reason</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        

          {{#holiday}}
          <tr title="sent: {{timesent}}" class="holiday">
        <td><img src="/images/beach.svg"/></td>
          <td>{{name}}</td>
          <td><a href="/email/{{email}}">{{email}}</a></td>
          <td>{{holidaystart}}~{{holidayend}}</td>
          <td>{{reason}}</td>
          </tr>
          {{/holiday}}

          {{#fruits}}
          <tr title="sent: {{timesent}}" class="absence {{times_icon}} {{reason_icon}}">
            <td><img src="/images/beach.svg"/></td>
          <td>{{name}}</td>
          <td><a href="/email/{{email}}">{{email}}</a></td>
          <td>{{holidaystart}}~{{holidayend}}</td>
          <td>{{reason}}</td>
          <td><a href="/delete/{{id}}"><img width="32" height="32" src="/images/delete.jpg"/></a></td>
          </tr>
          {{/fruits}}

        
        </tbody>
        </table>
      </div>
    </div>
  </div>


  <script type="application/javascript">
  document.onkeyup = function(e) {
    switch(e.which) {
        case 27: // esc
        window.location.href = document.referrer;
        break;

        case 37: // left
        // window.location.href =  window.location.origin + "/abs/{{today}}";
        break;

        case 38: // up
        window.location.href =  window.location.origin;
        break;

        case 39: // right
        // window.location.href =  window.location.origin + "/abs/{{dayafter}}";
        break;

        case 40: // down
        window.location.href =  window.location.origin + "/abs/{{today}}";
        break;

        default: return; // exit this handler for other keys
    }
    //e.preventDefault(); 

  }
  </script>
<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
</body>
</html>
