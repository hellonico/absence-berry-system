  <script type="application/javascript">
  document.onkeyup = function(e) {
    switch(e.which) {
        
        case 37: // left
        case 38: // up
        case 39: // right
        case 40: // down
        window.location.href =  window.location.origin + "/abs";
        break;

        default: return; // exit this handler for other keys
    }

  }
  </script>
