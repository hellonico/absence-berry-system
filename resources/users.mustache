<!DOCTYPE html>
<html lang="en">
{{> header}}
<body>

<div class="container">
    <div class="row u-full-width">
        {{> submenu }}
        <div class="row u-full-width">
        <h2>Users</h2>
        </div>
    </div>


    <div class="row u-full-width">
        <div class="twelve column tableFixHead" style="margin-top: 3%">

            <table style="width:80%" class="mytable u-full-width">
                <thead>
                <tr>
                    <th style="min-width: 30%">Name</th>
                    <th>Last Sent</th>
                    <th>Last Entry</th>
                </tr>
                </thead>
                <tbody>
                {{#users}}
                    {{^late}}
                        <tr title="sent: {{timesent}}" class="absence type{{telework}}">
                    {{/late}}
                    {{#late}}
                        <tr title="sent: {{timesent}}" class="absence">
                    {{/late}}
                        <th style="width:100px"><a data-id="{{email}}" href="/email/{{email}}">{{name}}</a></th>
                        <td>{{timesent}}</td>
                        <td>{{reason}} {{holidaystart}} {{date}}</td>
                    </tr>
                {{/users}}
                </tbody>
            </table>

        </div>

</div>
</body>
<script type="application/javascript">
    document.onkeyup = function(e) {
        switch (e.which) {
            case 27: // esc
                window.location.href = window.location.origin;
                break;
            default:
                return;
        }
    }
</script>
</html>